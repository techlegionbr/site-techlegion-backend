{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "prettier"
    ],
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-import-helpers"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": [
            "./tsconfig.json"
        ]
    },
    "rules": {
        "@typescript-eslint/no-misused-promises": [
            "error",
            {
                "checksConditionals": true
            }
        ],
        "import-helpers/order-imports": [
            "error",
            {
                "newlinesBetween": "always",
                "groups": [
                    "module",
                    "/^components/",
                    [
                        "parent",
                        "sibling",
                        "index"
                    ]
                ],
                "alphabetize": {
                    "order": "asc",
                    "ignoreCase": true
                }
            }
        ]
    }
}